#main_navigation {
	width:980px;
	height: 26px;
	margin-bottom: 8px;
	font-size:11px;
	font-family:Georgia, "Times New Roman", Times, serif;
	font-style:italic;
	color:#000;
	font-weight:bold;
    background-color:#e3e3e3;
}
#main_navigation .group { float: left; margin: 0 24px 0 8px;}
#main_navigation .group span { height: 19px; float: left; padding-top: 7px; margin-right: 4px;}
#main_navigation ul.topnav{
    float: left;
    list-style: none;
    top: 2px;
    position: relative;
}
#main_navigation ul.topnav li{
    float: left;
    position: relative;
}



#grid-icon { 
    background-image: url(../img/grid.png);
	background-repeat:no-repeat;
	height:22px;
	width: 36px;
	display:block;
}
#grid-icon.current { background-image:url(../img/grid-on.png);}
#list-icon { 
    background-image:url(../img/list.png);
	background-repeat:no-repeat;
	height:22px;
	width:36px;
	display:block;
}
#list-icon.current { background-image:url(../img/list-on.png);}
#text-icon { 
    background-image:url(../img/text.png);
	background-repeat:no-repeat;
	height:22px;
	width:36px;
	display:block;
}
#text-icon.current { background-image:url(../img/text-on.png);}

ul.news-list {
    float: left;
    width: 656px;
    margin: 0;
    padding: 0;
    list-style: none;
}
.news-list li {
    float: left;
    width: 324px;
    height: 100px;
    margin: 0 4px 4px 0;
}
.news-list img.news-img {
    width: 160px;
    height: 100px;
    float: left;
}
.news-list li.heading-news h2 {
    font-family: "Arial Black", Arial, Helvetica, sans-serif;
    letter-spacing: 0.05em;
    padding-bottom: 4px;
    font-size: 20px;
    line-height: 22px;
}
.news-list li.heading-news .news-img{ width: 324px; height: 204px;}
.news-list .news-img:hover { cursor: pointer;}
.news-list .news-text{ border-bottom: 1px solid black;}

.list-layout .news-img{ margin-right: 4px;}
.list-layout li.heading-news{ height: 278px;}
.list-layout .news-text { 
    width: 160px; 
    height: 99px; 
    float: left; 
}
.list-layout li.heading-news .news-text {
    width: 324px;
    height: 101px;
    margin-top: 2px;
}

.grid-layout li{ width: 160px; }
.grid-layout li.heading-news{
    width: 324px;
    height: 204px;
    position: relative;
}
.grid-layout li.heading-news .news-text {
    position: absolute;
    bottom: 0px;
    left: 0px;
    width: 324px;
    height: 30px;
    overflow: hidden;
    color: #fff;
    border: none;
    background: rgb(0, 0, 0); /* fallback color */
    background: rgba(0, 0, 0, 0.5);
}
.grid-layout li.heading-news .news-text a{ color: #fff; text-decoration: none; }

.text-layout li.heading-news{ height: 308px; }
.text-layout .news-text {
    float: left;
    width: 324px;
    height: 99px;
}
.text-layout li.heading-news .news-text {height: 101px; margin-top: 2px;}




.right-col{
    height: 412px;
    color: #fff;
    overflow: hidden;
}
.unit-cell{
    margin: 0 0 4px 0;
    height: 100px;
    overflow: hidden;
}
.unit-cell p, .unit-cell h2, .unit-cell h3, .unit-cell ul{ padding: 4px; margin: 0;}
.unit-2-cells{
    height: 204px;
    margin: 0 0 4px 0;
    overflow: hidden;
}
.unit-2-cells p,.unit-2-cells h2,.unit-2-cells h3,.unit-2-cells ul{ padding: 4px; margin: 0; }
.unit-3-cells{
    height: 308px;
    margin: 0 0 4px 0;
    overflow: hidden;
}
.unit-3-cells p, .unit-3-cells h2, .unit-3-cells h3, .unit-3-cells ul{ padding: 4px; margin: 0;}
.last-cell{ margin: 0px;}